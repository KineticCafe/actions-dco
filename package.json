{
  "name": "@KineticCafe/actions-dco",
  "version": "1.0.0",
  "author": "Kinetic Commerce",
  "description": "Check pull requests for DCO sign-off",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt --minify",
    "all": "pnpm run build && pnpm run format && pnpm run lint && pnpm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KineticCafe/actions-dco.git"
  },
  "keywords": [
    "actions",
    "dco",
    "signoff"
  ],
  "bugs": {
    "url": "https://github.com/KineticCafe/actions-dco/issues"
  },
  "homepage": "https://github.com/KineticCafe/actions-dco#readme",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "email-validator": "^2.0.4"
  },
  "devDependencies": {
    "@octokit/types": "^11.1.0",
    "@types/escape-html": "^1.0.2",
    "@types/node": "^20.5.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vercel/ncc": "^0.36.1",
    "escape-html": "^1.0.3",
    "eslint": "^8.47.0",
    "eslint-plugin-github": "^4.9.2",
    "js-yaml": "^4.1.0",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6"
  },
  "packageManager": "pnpm@8.6.12"
}
