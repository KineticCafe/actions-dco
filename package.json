{
  "name": "@KineticCafe/actions-dco",
  "version": "1.0.0",
  "author": "Kinetic Commerce",
  "description": "Check pull requests for DCO sign-off",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt --minify",
    "test": "jest",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KineticCafe/actions-dco.git"
  },
  "keywords": [
    "actions",
    "dco",
    "signoff"
  ],
  "bugs": {
    "url": "https://github.com/KineticCafe/actions-dco/issues"
  },
  "homepage": "https://github.com/KineticCafe/actions-dco#readme",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "email-validator": "^2.0.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@octokit/types": "^10.0.0",
    "@types/node": "^20.3.1",
    "@typescript-eslint/parser": "^5.59.11",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.42.0",
    "eslint-plugin-github": "^4.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "packageManager": "pnpm@8.6.1"
}
